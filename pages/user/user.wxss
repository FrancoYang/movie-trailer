/* pages/user/user.wxss */
page{
  background-color: #eee;
}

.user-info{
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
   margin-bottom: 20rpx; 
}

.head{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border:1px solid #eee;
}

.name{
  font-size: 30rpx;
  text-align: center;
}

 .history,.share{
   padding: 40rpx 30rpx; 
  background-color: #fff;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  position:relative;
} 

.history image,.share image{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 20rpx;
}