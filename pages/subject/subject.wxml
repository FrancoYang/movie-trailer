<!--pages/subject/subject.wxml-->
<input placeholder='请输入您的姓名' placeholder-class='placeholder' bindinput='input1'></input>
<input placeholder='请输入您的语文成绩' placeholder-class='placeholder' bindinput='input2'></input>
<input placeholder='请输入您的数学成绩' placeholder-class='placeholder' bindinput='input3'></input>
<button type='primary' bindtap='test'>提交</button>

<view class='content' hidden='{{flag}}'>
  <view class='content-item'>姓名：{{name}}</view>
  <view class='content-item'>语文成绩：{{chineseScore}}</view>
  <view class='content-item'>数学成绩：{{mathScore}}</view>
  <view class='content-item'>平均分：{{avg}}</view>
</view>


